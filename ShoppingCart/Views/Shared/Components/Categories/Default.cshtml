@model IEnumerable<Category>

<ul class="list-group">
        

        @foreach (var item in Model)
        {
                <li class="list-group">
                        <a class="list-group-item" asp-controller="Products" asp-action="Index" asp-route-categorySlug="@item.Slug">@item.Name</a>
                </li>
        }
        <li class="list-group">
                <a class="list-group-item active" asp-controller="Products" asp-action="Index" asp-route-categorySlug="">Tout les produits</a>
        </li>
</ul>